<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FrontEnd.Pages.FormUsuario"
             NavigationPage.HasBackButton="False"
             NavigationPage.HasNavigationBar="False">
    <ScrollView>
        <Grid x:Name="Contenedor" BackgroundColor="#a9dff0" >
            <VerticalStackLayout Spacing="1" Margin="40,40,40,0" Padding="10">
                <Frame Margin="10,0,10,0" VerticalOptions="Center" BackgroundColor="#bdc0f7" BorderColor="Azure" CornerRadius="50">
                    <VerticalStackLayout Margin="10,0,10,0" Spacing="10">
                        <Label x:Name="lblTitulo" FontAttributes="Bold" FontSize="Title" HorizontalTextAlignment="Center" TextColor="White" Text="Crear Usuario"/>
                        <Label FontAttributes="Bold" TextColor="White" Text="Nombre" />
                        <Entry x:Name="txtNombre" Keyboard="Text" Background="White" TextColor="Black" Placeholder="Ingrese el nombre"/>
                        <Label FontAttributes="Bold" TextColor="White" Text="Primer Apellido"></Label>
                        <Entry x:Name="txtPrimerApellido" Keyboard="Text" Background="White" TextColor="Black" Placeholder="Ingrese el primer apellido"/>
                        <Label FontAttributes="Bold" TextColor="White" Text="Segundo Apellido"></Label>
                        <Entry x:Name="txtSegundoApellido" Keyboard="Text" Background="White" TextColor="Black" Placeholder="Ingrese el segundo apellido"/>
                        <Label FontAttributes="Bold" TextColor="White" Text="Correo"></Label>
                        <Entry x:Name="txtCorreo" Keyboard="Email" Background="White" TextColor="Black" Placeholder="Ingrese el correo electrónico"/>
                        <Label FontAttributes="Bold" TextColor="White" Text="Teléfono"></Label>
                        <Entry x:Name="txtTelefono" Keyboard="Numeric" Background="White" TextColor="Black" Placeholder="Ingrese el número de teléfono"/>
                        <Label FontAttributes="Bold" TextColor="White" Text="Rol"/>
                        <Picker x:Name="pickRol"
                            FontAttributes="Bold"
                            TextColor="Gray"
                            BackgroundColor="White"
                            FontSize="12"
                            VerticalTextAlignment="Center"
                            SelectedIndexChanged="pickRol_SelectedIndexChanged"
                            Focused="pickRol_Focused"
                        />
                        <Label x:Name="lblPassword" FontAttributes="Bold" TextColor="White" Text="Contraseña"/>
                        <Grid x:Name="gridPassword" HeightRequest="50">
                            <Entry x:Name="txtPassword" IsPassword="True" Keyboard="Plain" Background="White" Placeholder="Ingrese una contraseña"/>
                            <ImageButton Source="show.png" WidthRequest="20" HeightRequest="20" Clicked="TogglePasswordVisibility" HorizontalOptions="End" VerticalOptions="Center"/>
                        </Grid>
                        <Label x:Name="lblRepeatPassword" FontAttributes="Bold" TextColor="White" Text="Repita Contraseña"/>
                        <Grid x:Name="gridRepeatPassword" HeightRequest="50">
                            <Entry x:Name="txtRepeatPassword" IsPassword="True" Keyboard="Plain" Background="White" TextColor="Black" Placeholder="Repita la contraseña" />
                            <ImageButton Source="show.png" WidthRequest="20" HeightRequest="20" Clicked="ToggleRepeatPasswordVisibility" HorizontalOptions="End" VerticalOptions="Center"/>
                        </Grid>

                        <Button x:Name="btnIngresar" Text="Crear" Clicked="btnIngresar_Clicked" BackgroundColor="#414BB2"></Button>
                        <Button x:Name="btnEliminar" Text="Eliminar" Clicked="btnEliminar_Clicked" BackgroundColor="#F76887" IsVisible="False"></Button>
                        <Button x:Name="btnCancelar" Text="Cancelar" Clicked="btnCancelar_Clicked" BackgroundColor="Gray"></Button>
                        <Entry x:Name="txtId"  Keyboard="Numeric" Background="White" IsReadOnly="true" IsVisible="False" Text="0"></Entry>
                    </VerticalStackLayout>
                </Frame>

            </VerticalStackLayout>
        </Grid>
    </ScrollView>
</ContentPage>